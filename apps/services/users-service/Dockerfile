# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t users-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system users-service && \
  adduser --system -G users-service users-service

COPY dist/apps/services/users-service users-service
RUN chown -R users-service:users-service .

WORKDIR /app/users-service

RUN yarn install --production --frozen-lockfile

CMD [ "node", "main" ]
