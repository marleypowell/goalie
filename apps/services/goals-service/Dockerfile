FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system goals-service && \
  adduser --system -G goals-service goals-service

COPY dist/apps/services/goals-service goals-service
RUN chown -R goals-service:goals-service .

